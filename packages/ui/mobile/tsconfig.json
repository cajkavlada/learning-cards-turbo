{
  "extends": "@repo/typescript-config/internal-package.json",
  "compilerOptions": {
    "jsx": "react-native",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "checkJs": false,
    "types": ["nativewind/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src", "nativewind-env.d.ts"],
  "exclude": ["node_modules"]
}
